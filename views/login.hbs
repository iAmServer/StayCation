<div class="global-container">
    <div class="card login-form">
        <div class="card-body">
            <h3 class="card-title text-center">Log in to StayCation</h3>
            <div class="card-text">
                {{#if message}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">{{message}}</div>
                {{/if}}
                {{#if success}}
                <div class="alert alert-success alert-dismissible fade show" role="alert">{{success}}</div>
                {{/if}}
                {{#if errors}}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">{{errors}}</div>
                {{/if}}
                <form action="/signin" method="POST">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control form-control-sm" name="email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control form-control-sm" name="password">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Sign in</button>

                    <div class="sign-up">
                        Don't have an account? <a href="/signup">Create One</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>